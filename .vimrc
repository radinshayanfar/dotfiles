"keep 1000 items in the history.
set history=1000

" hsow the cursor position
set ruler

" show incomplete commands.
set showcmd

" show line number.
set number

" shows a menu when using tab completion.
set wildmenu

set scrolloff=5

" set hlsearch
set incsearch
set ignorecase
set smartcase

set autoindent
set smartindent

set wrap
set bg=dark

color slate

set shiftwidth=5
set tabstop=5
set noexpandtab

set hidden
